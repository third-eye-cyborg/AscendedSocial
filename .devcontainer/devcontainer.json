{
  "name": "Ascended Social - Spiritual Platform",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:3.11": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "containerEnv": {
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--max-old-space-size=512"
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
  },
  "postCreateCommand": "npm install && npm run check",
  "postStartCommand": "npm run dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "vue.volar",
        "React-Native.react-native-tools",
        "unifiedjs.vscode-mdx",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-playwright.playwright",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff",
        "ms-python.python",
        "ms-python.debugpy",
        "Cypress.cypress",
        "firsttris.vscode-jest-runner",
        "dsznajder.es7-react-js-snippets",
        "xabikos.ReactSnippets",
        "wallabyjs.quokka-pro",
        "formulahendry.code-runner",
        "streetsidesoftware.code-spell-checker",
        "Gruntfuggly.todo-tree",
        "oderwat.indent-rainbow",
        "usernamehw.errorlens",
        "emilast.LogFileHighlighter",
        "ms-ceintl.vscode-language-pack-de",
        "ms-ceintl.vscode-language-pack-es",
        "ms-ceintl.vscode-language-pack-fr"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "typescript.format.semicolons": "insert",
        "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
        "typescript.preferences.quotePreference": "single",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "[python]": {
          "editor.defaultFormatter": "ms-python.python",
          "editor.formatOnSave": true
        },
        "[tailwindcss]": {
          "editor.defaultFormatter": "bradlc.vscode-tailwindcss",
          "editor.formatOnSave": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": false,
          "**/.next": true,
          "**/dist": true,
          "**/.turbo": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/.next": true,
          "dist": true,
          "**/.turbo": true
        },
        "todo-tree.general.tags": [
          "BUG",
          "HACK",
          "FIXME",
          "TODO",
          "XXX",
          "IDEA",
          "NOTE",
          "SPIRITUAL"
        ],
        "todo-tree.highlighting.backgroundColor": "rgba(100, 100, 0, 30)"
      }
    }
  },
  "forwardPorts": [3000, 3001, 6006, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Storybook/Preview",
      "onAutoForward": "notify"
    },
    "6006": {
      "label": "Storybook Dev",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly"
  ],
  "remoteUser": "node",
  "updateContentCommand": "npm install",
  "initializeCommand": ".devcontainer/init.sh",
  "capAdd": ["SYS_PTRACE"],
  "securityOpt": ["seccomp=unconfined"]
}

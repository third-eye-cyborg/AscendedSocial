{
  "polar": {
    "apiKey": "{{ POLAR_API_KEY }}",
    "organizationId": "{{ POLAR_ORGANIZATION_ID }}",
    "environment": "development",
    "webhookUrl": "/api/webhooks/polar",
    "webhookSecret": "{{ POLAR_WEBHOOK_SECRET }}",
    "status": "coming_soon",
    "products": [
      {
        "id": "mystic_monthly",
        "type": "subscription",
        "name": "Mystic Plan",
        "description": "Premium features with monthly billing",
        "price": 1200,
        "currency": "USD",
        "interval": "month",
        "features": [
          "Unlimited spiritual energy",
          "Enhanced oracle readings",
          "Priority support",
          "Advanced spiritual tools"
        ]
      },
      {
        "id": "ascended_monthly", 
        "type": "subscription",
        "name": "Ascended Plan",
        "description": "Premium features with enhanced benefits",
        "price": 2400,
        "currency": "USD", 
        "interval": "month",
        "features": [
          "All Mystic Plan features",
          "Exclusive oracle insights",
          "Premium community access",
          "Advanced 3D visualizations",
          "Custom sigil creation"
        ]
      }
    ]
  },
  "features": {
    "webhookRetry": {
      "maxAttempts": 5,
      "backoffMultiplier": 2,
      "initialDelayMs": 1000
    }
  },
  "security": {
    "webhookVerification": {
      "polar": {
        "enabled": true,
        "secret": "{{ POLAR_WEBHOOK_SECRET }}"
      }
    },
    "rateLimiting": {
      "enabled": true,
      "requestsPerMinute": 60,
      "burstLimit": 10
    }
  },
  "compliance": {
    "dataRetention": {
      "paymentDataDays": 2555,
      "failedPaymentDataDays": 90,
      "subscriptionHistoryDays": 2555
    }
  }
}
